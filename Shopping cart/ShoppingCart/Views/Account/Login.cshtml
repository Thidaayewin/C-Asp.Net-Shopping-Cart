
<body>
    <main>
        <form id="login-form" class="form_class">
            <h2>Login</h2>
            <div class="form_div">
                <label>Email:</label>
                <input class="field_class" type="text" id="username" name="username" placeholder="Username" required/><br />
                <label>Password:</label>
                <input class="field_class" type="password" id="password" name="password" placeholder="Password" required/>
                <button class="submit_class" type="submit">Login</button>
            </div>
        </form>
    </main>
</body>
<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
@section Scripts {
    <script src="~/js/login.js"></script>
          <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
}

